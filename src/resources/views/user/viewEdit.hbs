 <div class="mt-4">
    {{#if message }}
        <div class="alert alert-{{message.type}}" role="alert">
            <button type="button" class="close" data-dismiss="alert"> &times;</button>
            <strong>{{message.intro}}</strong> {{message.message}}
        </div>
    {{/if}}
</div>
<div class="container">
    <div class="mt-4"> 
    <div class="row margin-bottom-40">
        <div class="col-md-3 col-sm-4">
            <div class="list-group">
                <a href="/user/view" class="list-group-item list-group-item-action">
                Thông tin cá nhân
                 </a>
                <a href="/user/edit" class="list-group-item list-group-item-action active">Chỉnh sửa thông tin cá nhân</a>
            </div>
        </div>
        <div class="col-md-9 col-sm-8">
            <div class="ggh">
                <div class="card">
                    <div class="card-body">
                        <form method="post" action="/user/edit?_method=PUT" class="user">
                            <div class="form-group">
                                <label for="username">Tên đăng nhập</label>
                                <input type="username" class="form-control" value="{{user.username}}" id="username" name="username">
                            </div>
                            <div class="form-group">
                                <label for="phone">Số điện thoại</label>
                                <input type="text" class="form-control" value="0{{user.phone}}" id="phone" name="phone">
                            </div>
                            <div class="form-group">
                                <label for="address">Địa chỉ</label>
                                <textarea rows="2" class="form-control"  id="address" name="address">{{user.address}}</textarea>
                            </div>
                            <div class="form-group">
                                <label for="history">Tiểu sử</label>
                                <textarea rows="2" class="form-control"  id="history" name="history">{{user.history}}</textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-success">Lưu lại</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
           
    </div>
</div>
</div>
</div>


{{> footer}}
